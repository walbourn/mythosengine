#
#
#                               Variables
#
#

!if "$(DEBUG)" == ""
DEBUG = NO
!endif

!if "$(THREAD)" == ""
THREAD = YES
!endif

!if "$(MYTH95ROOT)" == ""
MYTH95ROOT = \MythOS95
!endif

INCPATH = ;..\inc;$(MYTH95ROOT)\inc;

#Ŀ
# File specific variables                                                  
#

LIB = simgine

OBJS = \
simpch.obj\
simassrt.obj\
simaudio.obj\
simbase.obj\
simequip.obj\
simgine.obj\
simobj.obj\
simofld.obj\
simproc.obj\
simscl3d.obj\
simscrn.obj\
simsd3d.obj\
simsdd.obj\
simsdib.obj\
simstart.obj\
simstate.obj\
simtemp.obj\
simtext.obj\
simttabl.obj\
simui.obj\
simulatr.obj\
simunit.obj\
simview.obj

#Ŀ
# First target                                                             
#

all: setstden $(LIB).pch $(LIB).lib

#Ŀ
# Standard make include                                                    
#

!include $(MYTH95ROOT)\inc\make.inc

#
#
#                                 Rules
#
#

#--- .c, .cpp, .asm setup in standard include ---

{..\}.cpp{}.obj:
	$(CPP) $(CCOPTIONS) /Yusimgine.hpp /Fp$(LIB).pch  $<

#
#
#                              Dependencies
#
#

$(LIB).pch :
    del simpch.obj

simpch.obj : ..\simpch.cpp
    $(CPP) /Ycsimgine.hpp /Fp$(LIB).pch $(CCOPTIONS) ..\$*.cpp

simscl3d.obj : ..\simscl3d.cpp
    $(CPP) $(CCOPTIONS) ..\$*.cpp

#Ŀ
# Library                                                                  
#

$(LIB).lib: $(OBJS)
   -del $(LIB).lib
   $(LB) $(LBOPTS) /OUT:$(LIB).lib @<<
   $(OBJS)
<<

release: all
   copy ..\inc\*.* $(MYTH95ROOT)\inc
   copy $(LIB).lib $(MYTH95ROOT)\lib

clean:
   @del *.obj
   @del *.err
   @del *.lst
   @del *.ilk
   @del *.pdb
   @del *.pch

# End of makefile 

