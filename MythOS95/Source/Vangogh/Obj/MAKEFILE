!if "$(DEBUG)" == ""
DEBUG = NO
!endif

!if "$(MYTH95ROOT)" == ""
MYTH95ROOT = \MythOS95
!endif

INCPATH = ;..\inc;$(MYTH95ROOT)\inc;
LIBPATH = $(MYTH95ROOT)\lib;

#Ŀ
# File specific variables                                                  
#

LIB = VanGogh


OBJS=vngline.obj\
vngclip.obj\
vngitrns.obj\
vngzrect.obj\
vngpcalc.obj\
vngpal.obj\
vngcolor.obj\
vngtset.obj\
vngcircl.obj\
vngsmth.obj\
vngzmap.obj\
vngserv.obj\
vnggen.obj\
vngpix8.obj\
vngrect8.obj\
vngitrn8.obj\
vngtri8.obj\
vnggtri8.obj\
vngttri8.obj\
vngptri8.obj\
vngvpdd8.obj\
vngvpdb8.obj\
vngvvp8.obj\
vngrct16.obj\
vngpix16.obj\
vngvvp16.obj


#Ŀ
# First target                                                             
#

all: setstden $(LIB).lib

#Ŀ
# Standard make include                                                    
#

!include $(MYTH95ROOT)\inc\make.inc

#
#
#                                 Rules
#
#

# define how we compile a .ASM file
{..\8bpp\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

# define how we compile a .C file
{..\8bpp\}.c{}.obj:
	$(CC) $(CCOPTIONS) $<

# define how we compile a .CPP file
{..\8bpp}.cpp{}.obj:
	$(CPP) $(CCOPTIONS) $<

# define how we compile a .ASM file
{..\16bpp\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

# define how we compile a .C file
{..\16bpp\}.c{}.obj:
	$(CC) $(CCOPTIONS) $<

# define how we compile a .CPP file
{..\16bpp\}.cpp{}.obj:
	$(CPP) $(CCOPTIONS) $<

# define how we compile a .ASM file
{..\24bpp\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

# define how we compile a .C file
{..\24bpp\}.c{}.obj:
	$(CC) $(CCOPTIONS) $<

# define how we compile a .CPP file
{..\24bpp\}.cpp{}.obj:
	$(CPP) $(CCOPTIONS) $<

#
#
#                              Dependencies
#
#

#--- .c, .cpp, .asm setup in standard include ---

#Ŀ
# Library                                                                  
#

$(LIB).lib:   $(OBJS)
    -del $(LIB).lib
    $(LB) $(LBOPTS) /out:$(LIB).lib @<<
    $(OBJS: =
)
<<

release: all
    copy ..\inc\*.* $(MYTH95ROOT)\inc
    copy $(LIB).lib $(MYTH95ROOT)\lib

clean:
    del *.obj
    del *.res
    del *.err
    del *.lst
    del *.ilk
    del *.pdb

# End of makefile 

