!if "$(DEBUG)" == ""
DEBUG = NO
!endif

!if "$(THREAD)" == ""
THREAD = YES
!endif

!if "$(MYTH95ROOT)" == ""
MYTH95ROOT = \MythOS95
!endif

INCPATH = ;..\..\inc;$(MYTH95ROOT)\inc;
LIBPATH = ..\..\obj;$(MYTH95ROOT)\lib;

#Ŀ
# File specific variables                                                  
#

EXE = xt

OBJS = \
xtbitmap.obj\
xtbuffer.obj\
xtiff.obj\
xtini.obj\
xtlow.obj\
xtmain.obj\
xtram.obj\
resource.res

LIBS=\
xfile.lib\
ivorymfc.lib

all: setstden $(EXE).exe

#Ŀ
# Standard make include                                                    
#

!include $(MYTH95ROOT)\inc\make.inc

#
#
#                                 Rules
#
#

