#
#                              Dependencies
#
#

..\maxtest.iff: ..\maxtest.cel
    $(MYTH95ROOT)\bin\maxc ..\maxtest.cel

..\maxtest.hpp: ..\maxtest.cel

#Ŀ
# Executable                                                               
#

$(EXE).exe:   $(OBJS)
#   $(LINK) $(LINKOPTS) /OUT:$* /subsystem:windows,4 @<<
   $(LINK) $(LINKOPTS) /OUT:$*.exe @<<
   $(OBJS) $(LIBS)
<<

clean:
   del *.obj
   del *.res
   del *.err
   del *.lst
   del *.ilk
   del *.pdb

