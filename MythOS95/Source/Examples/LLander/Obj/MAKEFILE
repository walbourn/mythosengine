#
#
#                               Variables
#                                
#

!if "$(DEBUG)" == ""
DEBUG = NO
!endif

!if "$(THREAD)" == ""
THREAD = YES
!endif

!if "$(MYTH95ROOT)" == ""
MYTH95ROOT = \MythOS95
!endif

INCPATH = ;..\inc;$(MYTH95ROOT)\inc;

#Ŀ
# File specific variables                                                  
#

LIBPATH = $(MYTH95ROOT)\lib;

EXE = llander

OBJS = \
llapp.obj\
lltitle.obj\
llgame.obj\
llend.obj\
resource.res

LIBS = \
simgine.lib\
ivory.lib\
xfile.lib\
felix.lib\
chronos.lib\
max.lib\
vangogh.lib\
escher.lib\
gutenbrg.lib\
bozo.lib\
turner.lib\
mythos.lib\
dxguid.lib\
uuid.lib\
dinput.lib\
ddraw.lib\
dplayx.lib\
gdi32.lib\
winmm.lib\
user32.lib

#Ŀ
# First target                                                             
#

all: setstden $(EXE).pch $(EXE).exe ..\llander.iff

#Ŀ
# Standard make include                                                    
#

!include $(MYTH95ROOT)\inc\make.inc

#
#
#                                 Rules
#
#

#--- .c, .cpp, .asm setup in standard include ---

{..\}.cpp{}.obj:
	$(CPP) $(CCOPTIONS) /Yullander.hpp /Fp$(EXE).pch  $<

#
#
#                              Dependancies
#
#

$(EXE).pch :
    del llapp.obj

llapp.obj : ..\llapp.cpp
    $(CPP) /Ycllander.hpp /Fp$(EXE).pch $(CCOPTIONS) ..\$*.cpp

#
# Data Files
#

..\llander.iff:  ..\llander.cif\
                 ..\llevt.iff\
                 ..\Data\9x15.iff\
                 ..\Data\12x24.iff\
                 ..\Data\lltitle.iff\
                 ..\Data\default.vgp
    $(MYTH95ROOT)\bin\iffc -q ..\llander.cif

#
# Event system Files
#

..\llevt.iff : ..\llevt.hpp

..\llevt.hpp:  ..\llevt.cel
    $(MYTH95ROOT)\bin\maxc ..\llevt.cel

#
# C++ files
#

llapp.obj : ..\llapp.cpp\
            ..\llander.hpp

lltitle.obj : ..\lltitle.cpp\
              ..\llander.hpp\
              ..\llevt.hpp

llgame.obj : ..\llgame.cpp\
             ..\llander.hpp\
             ..\llevt.hpp

llend.obj : ..\llend.cpp\
            ..\llander.hpp\
            ..\llevt.hpp

#Ŀ
# Executable                                                               
#

$(EXE).exe:   $(OBJS)
    $(LINK) $(LINKOPTS) /OUT:$*.exe /subsystem:windows,4 @<<
    $(OBJS) $(LIBS)
<<

clean:
    del *.obj
    del *.res
    del *.err
    del *.lst
    del *.ilk
    del *.pdb
    del *.vcp
    del *.pch
    del ..\llevt.hpp
    del ..\llevt.iff
    del ..\llander.iff

# End of makefile 

