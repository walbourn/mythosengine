$(EXE).exe:   $(OBJS)
#   $(LINK) $(LINKOPTS) /OUT:$* /subsystem:windows,4 @<<
   $(LINK) $(LINKOPTS) /OUT:$*.exe @<<
   $(OBJS) $(LIBS)
<<

clean:
   del *.obj
   del *.res
   del *.err
   del *.lst
   del *.ilk
   del *.pdb
   del *.vcp

