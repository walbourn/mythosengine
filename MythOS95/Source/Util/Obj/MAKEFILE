!if "$(DEBUG)" == ""
DEBUG = NO
!endif

!if "$(MYTH95ROOT)" == ""
MYTH95ROOT = \MythOS95
!endif

INCPATH   = ;$(MYTH95ROOT)\inc;

#Ŀ
# File specific variables                                                  
#

LIBPATH = ;$(MYTH95ROOT)\lib;

PICEXE = pic

PICOBJS = pic.obj

LIBS = felix.lib\
xfile.lib\
vangogh.lib\
ivorymfc.lib

#Ŀ
# First target                                                             
#

all: setstden $(PICEXE).exe

#Ŀ
# Standard make include                                                    
#

!include $(MYTH95ROOT)\inc\make.inc

#
#
#                                 Rules
#
#

#
#
#                              Dependancies
#
#

clean:
    del *.obj
    del *.res
    del *.err
    del *.lst
    del *.ilk
    del *.pdb
    del *.vcp

#Ŀ
# Release target                                                           
#

release: all
   copy *.exe $(MYTH95ROOT)\bin

#Ŀ
# Picture recolor utility (Picasso)                                        
#

$(PICEXE).exe:   $(PICOBJS)
    $(LINK) $(LINKOPTS) /OUT:$*.exe @<<
    $(PICOBJS) $(LIBS)
<<

# End of makefile 
