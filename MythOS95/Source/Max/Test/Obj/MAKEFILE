!if "$(DEBUG)" == ""
DEBUG = NO
!endif

!if "$(THREAD)" == ""
THREAD=YES
!endif

!if "$(MYTH95ROOT)" == ""
MYTH95ROOT = \MythOS95
!endif

INCPATH   = ;..\..\inc;$(MYTH95ROOT)\inc;

#Ŀ
# File specific variables                                                  
#

OBJS = \
test.obj\
resource.res

LIBPATH = ..\..\obj;$(MYTH95ROOT)\lib;

EXE = test

LIBS = max.lib\
ivory.lib\
xfile.lib\
user32.lib\
winmm.lib\
dinput.lib\
dxguid.lib

#Ŀ
# First target                                                             
#

all: setstden ..\maxtest.iff $(EXE).exe

#Ŀ
# Standard make include                                                    
#

!include $(MYTH95ROOT)\inc\make.inc

#
#
#                                 Rules
#
#

#--- .c, .cpp, .asm setup in standard include ---

#
#
#                              Dependencies
#
#

..\maxtest.iff: ..\maxtest.cel
    $(MYTH95ROOT)\bin\maxc ..\maxtest.cel

..\maxtest.hpp: ..\maxtest.cel

#Ŀ
# Executable                                                               
#

$(EXE).exe:   $(OBJS)
#   $(LINK) $(LINKOPTS) /OUT:$* /subsystem:windows,4 @<<
   $(LINK) $(LINKOPTS) /OUT:$*.exe @<<
   $(OBJS) $(LIBS)
<<

clean:
   del *.obj
   del *.res
   del *.err
   del *.lst
   del *.ilk
   del *.pdb
   del ..\maxtest.iff
   del ..\maxtest.hpp

