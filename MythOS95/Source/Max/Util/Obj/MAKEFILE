!if "$(DEBUG)" == ""
DEBUG = NO
!endif

!if "$(THREAD)" == ""
THREAD=YES
!endif

!if "$(MYTH95ROOT)" == ""
MYTH95ROOT = \MythOS95
!endif

INCPATH   = ;..\;..\..\inc;$(MYTH95ROOT)\inc;

#Ŀ
# File specific variables                                                  
#

LIBPATH = ..\..\obj;$(MYTH95ROOT)\lib;

EXEC = maxc

OBJSC = \
lex.yy.obj\
evtc.obj\
evtcp.obj\
evtc.res

LIBS =\
xfile.lib\
max.lib\
user32.lib\
winmm.lib

all: setstden $(EXEC).exe

#Ŀ
# Standard make include                                                    
#

!include $(MYTH95ROOT)\inc\make.inc

#
#
#                                 Rules
#
#

#
#
#                              Dependancies
#
#

#Ŀ
# Release target                                                           
#

release: all
   copy *.exe $(MYTH95ROOT)\bin

#Ŀ
# IFF Compiler                                                             
#

$(EXEC).exe: $(OBJSC)
   $(LINK) $(LINKOPTS) /OUT:$*.exe @<<
   $(OBJSC) $(LIBS)
<<


lex.yy.obj : .\lex.yy.c
        $(CC) $(CCOPTIONS) /W2 lex.yy.c

.\lex.yy.c : ..\evtc.l
   flex -8 ../evtc.l

clean:
   del lex.yy.c
   del *.obj
   del *.res
   del *.err
   del *.lst
   del *.ilk
   del *.pdb
   del *.vcp

# End of makefile 

