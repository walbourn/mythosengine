#--- .c, .cpp, .asm setup in standard include ---

{..\}.cpp{}.obj:
        $(CPP) $(CCOPTIONS) /Yullander.hpp /Fp$(EXE).pch  $<

#±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±
