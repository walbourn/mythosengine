!if "$(DEBUG)" == ""
DEBUG = NO
!endif

!if "$(THREAD)" == ""
THREAD = YES
!endif

!if "$(MYTH95ROOT)" == ""
MYTH95ROOT = \MythOS95
!endif

INCPATH = ;..\;..\..\inc;$(MYTH95ROOT)\inc

#Ŀ
# File specific variables                                                  
#

LIBPATH = $(MYTH95ROOT)\lib;

EXE = gt

OBJS=\
main.obj\
init.obj\
gstate.obj\
resource.res

LIBPATH = ..\..\obj;$(MYTH95ROOT)\lib;

LIBS = \
gutenbrg.lib\
felix.lib\
ivory.lib\
max.lib\
xfile.lib\
vangogh.lib\
version.lib\
gdi32.lib\
comctl32.lib\
comdlg32.lib\
winmm.lib\
msacm32.lib\
user32.lib\
dxguid.lib\
dinput.lib

#Ŀ
# First target                                                             
#

all: setstden $(EXE).exe

#Ŀ
# Standard make include                                                    
#

!include $(MYTH95ROOT)\inc\make.inc

#
#
#                                 Rules
#
#

#--- .c, .cpp, .asm setup in standard include ---

#
#
#                              Dependencies
#
#

#
# Event system Files
#

..\gframe.iff : ..\gframe.hpp

..\gframe.hpp:  ..\gframe.cel
   $(MYTH95ROOT)\bin\maxc ..\gframe.cel

#
# C++ files
#

gstate.obj : ..\gstate.cpp\
             ..\global.hpp\
             ..\test.hpp\
             ..\gframe.hpp

init.obj : ..\init.cpp\
           ..\global.hpp\
           ..\resource.h

main.obj : ..\main.cpp\
           ..\global.hpp\
           ..\resource.h

resource.res : ..\resource.rc\
               ..\resource.h

#Ŀ
# Executable                                                               
#

$(EXE).exe:   $(OBJS)
    $(LINK) $(LINKOPTS) /OUT:$*.exe /subsystem:windows,4 @<<
    $(OBJS) $(LIBS)
<<

clean:
    del *.obj
    del *.res
    del *.err
    del *.lst
    del *.ilk
    del *.pdb
    del *.vcp

# End of makefile 

