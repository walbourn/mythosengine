!if "$(DEBUG)" == ""
DEBUG = NO
!endif

!if "$(MYTH95ROOT)" == ""
MYTH95ROOT = \MythOS95
!endif

INCPATH   = ;..\;..\..\inc;$(MYTH95ROOT)\inc;

#Ŀ
# File specific variables                                                  
#

LIBPATH = ..\..\obj;$(MYTH95ROOT)\lib;

EXEC = maxc

OBJSC = lexyy.obj\
evtc.obj\
evtcp.obj

LIBS =\
xfile.lib max.lib\
user32.lib winmm.lib

all: setstden $(EXEC).exe

#Ŀ
# Standard make include                                                    
#

!include $(MYTH95ROOT)\inc\make.inc

#
#
#                                 Rules
#
#

#
#
#                              Dependancies
#
#

#Ŀ
# Release target                                                           
#

release: all
   copy *.exe $(MYTH95ROOT)\bin

#Ŀ
# IFF Compiler                                                             
#

$(EXEC).exe: $(OBJSC)
   $(LINK) $(LINKOPTS) /OUT:$*.exe @<<
   $(OBJSC) $(LIBS)
<<


lexyy.obj : .\lexyy.c
        $(CC) $(CCOPTIONS) /W2 lexyy.c

.\lexyy.c : ..\evtc.l
   flex -8 ../evtc.l

clean:
   del *.obj
   del *.err
   del *.lst

# End of makefile 

