!if "$(DEBUG)" == ""
DEBUG = NO
!endif

!if "$(THREAD)" == ""
THREAD=YES
!endif

!if "$(MYTH95ROOT)" == ""
MYTH95ROOT = \MythOS95
!endif

INCPATH = ;..\inc;$(MYTH95ROOT)\inc;

#Ŀ
# File specific variables                                                  
#

LIB = bach

OBJS = \
bachdigi.obj\
bachsamp.obj\
bachsys.obj\
bachwseq.obj

#Ŀ
# First target                                                             
#

all: setstden $(LIB).lib

#Ŀ
# Standard make include                                                    
#

!include $(MYTH95ROOT)\inc\make.inc

#
#
#                                 Rules
#
#

#--- .c, .cpp, .asm setup in standard include ---

#
#
#                              Dependencies
#
#

bachdigi.obj:\
    ..\bachdigi.cpp\
    ..\inc\bach.hpp\
    ..\inc\bachdigi.hpp\
    ..\inc\bachdefs.hpp\
    ..\inc\bachsys.hpp

bachsamp.obj:\
    ..\bachsamp.cpp\
    ..\inc\bach.hpp\
    ..\inc\bachdigi.hpp\
    ..\inc\bachdefs.hpp\
    ..\inc\bachsys.hpp

bachsys.obj:\
    ..\bachsys.cpp\
    ..\inc\bach.hpp\
    ..\inc\bachdigi.hpp\
    ..\inc\bachdefs.hpp\
    ..\inc\bachsys.hpp

bachwseq.obj:\
    ..\bachwseq.cpp\
    ..\inc\bach.hpp\
    ..\inc\bachdigi.hpp\
    ..\inc\bachwseq.hpp\
    ..\inc\bachdefs.hpp\
    ..\inc\bachsys.hpp

#Ŀ
# Library                                                                  
#

$(LIB).lib:   $(OBJS)
   -del $(LIB).lib
   $(LB) $(LBOPTS) /OUT:$(LIB).lib @<<
   $(OBJS)
<<

release: all
   copy ..\inc\b*.* $(MYTH95ROOT)\inc
   copy $(LIB).lib $(MYTH95ROOT)\lib

clean:
   del *.obj
   del *.err
   del *.lst

# End of makefile 

